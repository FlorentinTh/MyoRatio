{
  "name": "EMGTrigno",
  "version": "1.0.0",
  "description": "Application to process EMG Trigno data",
  "main": "./build/public/index.html",
  "scripts": {
    "lint": "eslint ./src --ext .js,.json && stylelint ./src/**/*.css",
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "make:win": "build --tasks win-x86,win-x64 --concurrent --mirror https://dl.nwjs.io/ .",
    "make:mac": "build --tasks mac-x64 --concurrent --mirror https://dl.nwjs.io/ .",
    "commit": "git-cz",
    "release": "standard-version",
    "git:publish": "git push --follow-tags"
  },
  "author": "FlorentinTh",
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "window": {
    "title": "EMG Trigno",
    "icon": "./src/assets/icons/app.png",
    "height": 720,
    "width": 1280,
    "resizable": true,
    "position": "center"
  },
  "chromium-args": "--disable-raf-throttling",
  "build": {
    "appId": "ca.liaralab.emgtrigno",
    "nwVersion": "0.70.1",
    "nwFlavor": "normal",
    "packed": true,
    "targets": [
      "zip",
      "nsis"
    ],
    "strippedProperties": [
      "build",
      "devDependencies",
      "scripts",
      "pre-commit",
      "config",
      "author",
      "dependencies"
    ],
    "outputPattern": "${NAME}_${VERSION}_${PLATFORM}${ARCH}",
    "excludes": [
      "dist/**/*",
      "**/node_modules/**",
      "**/src/**",
      "package-lock.json",
      "README.md",
      "webpack.config.js"
    ],
    "ffmpegIntegration": false,
    "win": {
      "productName": "EMG Trigno",
      "companyName": "LIARA Lab.",
      "fileDescription": "EMG Trigno",
      "copyright": "Copyright LIARA Lab.",
      "icon": "./src/assets/icons/win/app.ico"
    },
    "nsis": {
      "icon": "./src/assets/icons/win/app.ico",
      "unIcon": "./src/assets/icons/win/app.ico",
      "installDirectory": "$APPDATA\\${_COMPANYNAME}\\${_APPNAME}",
      "diffUpdaters": true,
      "hashCalculation": true
    },
    "mac": {
      "displayName": "EMG Trigno",
      "copyright": "Copyright LIARA Lab.",
      "icon": "./src/assets/icons/mac/app.icns",
      "plistStrings": {
        "CFBundleIdentifier": "ca.liaralab.emgtrigno",
        "CFBundleDocumentTypes": []
      }
    }
  },
  "devDependencies": {
    "@florentinth/nwjs-builder-phoenix": "^1.15.2",
    "@types/chrome": "^0.0.204",
    "@types/node": "^18.11.15",
    "@types/nw.js": "^0.13.16",
    "css-loader": "^6.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.1",
    "nw": "^0.70.1-sdk",
    "path-browserify": "^1.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.0",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@popperjs/core": "^2.11.6",
    "chartjs": "^0.3.24",
    "chartjs-plugin-crosshair": "^1.2.0",
    "dayjs": "^1.11.7",
    "html-pdf-node-generator": "^1.0.1"
  }
}
