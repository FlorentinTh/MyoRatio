{
  "name": "EMGTrigno",
  "version": "1.0.0",
  "description": "Application to process EMG Trigno data",
  "main": "./build/public/index.html",
  "scripts": {
    "start": "webpack serve --mode development",
    "prebuild": "webpack --mode production",
    "build:win": "npm run prebuild && build --tasks win-x64 --concurrent --mirror https://dl.nwjs.io/ . && npm run cp:bin:win",
    "cp:bin:win": "cross-var cpy ./bin ./dist/$npm_package_name_$npm_package_version_winx64",
    "make:win": "innosetup-compiler winx64-installer.iss --verbose",
    "checksum:win": "cross-var \"checksum -a sha256 ./release/winx64/$npm_package_name_$npm_package_version_winx64.exe > ./release/winx64/$npm_package_name_$npm_package_version_winx64.sha256sum\"",
    "publish:win": "npm run make:win && npm run checksum:win",
    "cp:bin:mac": "cross-var 'cpy ./bin \"./dist/$npm_package_name_$npm_package_version_macx64/EMG Trigno.app/Contents/Resources/app.nw\"'",
    "chmod:mac": "cross-var 'chmod -R 755 \"./dist/$npm_package_name_$npm_package_version_macx64/EMG Trigno.app/Contents/Resources/app.nw/bin\"'",
    "build:mac": "npm run prebuild && build --tasks mac-x64 --concurrent --mirror https://dl.nwjs.io/ . && npm run cp:bin:mac && npm run chmod:mac",
    "rename-dmg": "cross-var 'mv \"./release/macx64/EMG Trigno $npm_package_version.dmg\" ./release/macx64/$npm_package_name_$npm_package_version_macx64.dmg'",
    "checksum:mac": "cd ./release/macx64 && cross-var 'checksum -a sha256 $npm_package_name_$npm_package_version_macx64.dmg > $npm_package_name_$npm_package_version_macx64.sha256sum'",
    "publish:mac": "cross-var 'create-dmg \"./dist/$npm_package_name_$npm_package_version_macx64/EMG Trigno.app\" ./release/macx64' && npm run rename-dmg && npm run checksum:mac",
    "clean": "rimraf build && rimraf dist",
    "lint": "eslint ./src --ext .js,.json && stylelint ./src/**/*.css",
    "commit": "git-cz",
    "release": "standard-version",
    "git:publish": "git push --follow-tags"
  },
  "author": "FlorentinTh",
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "window": {
    "title": "EMG Trigno",
    "icon": "src/assets/icons/app.png",
    "height": 720,
    "width": 1280,
    "resizable": true,
    "position": "center"
  },
  "chromium-args": "--disable-raf-throttling",
  "build": {
    "appId": "ca.liaralab.emgtrigno",
    "nwVersion": "0.72.0",
    "nwFlavor": "normal",
    "packed": false,
    "targets": [],
    "strippedProperties": [
      "build",
      "devDependencies",
      "scripts",
      "pre-commit",
      "config",
      "author",
      "dependencies"
    ],
    "overriddenProperties": {
      "window": {
        "icon": "build/public/assets/app.png",
        "height": 720,
        "width": 1280,
        "resizable": true,
        "position": "center"
      }
    },
    "outputPattern": "${NAME}_${VERSION}_${PLATFORM}${ARCH}",
    "excludes": [
      "dist/**/*",
      "**/node_modules/**",
      "**/src/**",
      "package-lock.json",
      "*.md",
      "webpack.config.js",
      "env.json.example",
      "env.json",
      "bin/**/*",
      "*.iss"
    ],
    "ffmpegIntegration": false,
    "win": {
      "productName": "EMG Trigno",
      "companyName": "LIARA Lab.",
      "fileDescription": "EMG Trigno",
      "copyright": "Copyright LIARA Lab.",
      "icon": "./src/assets/icons/win/app-256.ico"
    },
    "mac": {
      "displayName": "EMG Trigno",
      "copyright": "Copyright LIARA Lab.",
      "icon": "./src/assets/icons/mac/app.icns",
      "plistStrings": {
        "CFBundleIdentifier": "ca.liaralab.emgtrigno",
        "CFBundleName": "EMG Trigno",
        "CFBundleDocumentTypes": []
      }
    }
  },
  "devDependencies": {
    "@florentinth/nwjs-builder-phoenix": "^1.15.2",
    "@types/chrome": "^0.0.213",
    "@types/node": "^18.13.0",
    "@types/nw.js": "^0.13.16",
    "checksum": "^1.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cpy-cli": "^4.2.0",
    "cross-var": "^1.1.0",
    "css-loader": "^6.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "handlebars-loader": "^1.7.3",
    "html-webpack-plugin": "^5.5.0",
    "innosetup-compiler": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.1",
    "nw": "^0.72.0-sdk",
    "path-browserify": "^1.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "stylelint": "^15.1.0",
    "stylelint-config-standard": "^30.0.1",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.3.0",
    "@popperjs/core": "^2.11.6",
    "chartjs": "^0.3.24",
    "chartjs-plugin-crosshair": "^1.2.0",
    "dayjs": "^1.11.7",
    "yup": "^1.0.0"
  },
  "optionalDependencies": {
    "create-dmg": "^6.0.0"
  }
}
